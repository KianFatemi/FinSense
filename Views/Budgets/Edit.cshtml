@model PersonalFinanceDashboard.Models.Budget

@{
    ViewData["Title"] = "Edit Budget";
}

<div class="container-fluid p-4">
    <h1 class="mb-4">Edit Budget</h1>

    <div class="row">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        @* Hidden inputs to ensure the ID and other non-editable properties are sent back to the server *@
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="UserID" />
                        <input type="hidden" asp-for="Category" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Category</label>
                            @* Display the category as plain text since it shouldn't be changed *@
                            <p class="form-control-plaintext fs-5">@Model.Category</p>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label">Monthly Budget Amount</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Amount" class="form-control" type="number" step="0.01" />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <div class="mt-4 d-flex gap-2">
                            <input type="submit" value="Save Changes" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
